@model IEnumerable<ABC_Invoicing.Models.Customer>

@{
    ViewBag.Title = "Customer List";
}

<br />
<h4>Customer List</h4>

<div>
    <a href="@Url.Action("Create","Customers")" class="btn btn-default btn-md">
        <span class="far fa-plus-square fa-lg" aria-hidden="true"></span>
         New Customer
    </a>
</div>
<br />

<table id="TaskTable" class="table table-striped table">
    <thead>

        <tr>
            <th>COMPANY NAME</th>
            <th>ADDRESS</th>
            <th>CONTACT NO.</th>
            <th>REGISTRATION NO.</th>
            <th>VAT NUMBER</th>
            <th>CONTACT PERSON</th>
            <th></th>
            <th></th>
        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model)
        {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerRegNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerVatNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerContact)
            </td>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <td width=170px>
                    @Html.ActionLink(" ", "Edit", new { id = item.CustomerID }, new { @class = "btn btn-primary glyphicon glyphicon-pencil", title = "Edit Task" })
                    <a onclick="Delete(@item.CustomerID)" class="btn btn-danger" data-toggle="tooltip" title="Delete Task"><i class="glyphicon glyphicon-remove" style="color:white"></i></a>
                </td>
            }
        </tr>

        }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="13"> TOTAL CUSTOMERS : @Model.Count()</td>
        </tr>
    </tfoot>
</table>
